<h1><span>List Index</span></h1>

<div class="cards">
    <% @lists.each do |list| %>
      <% if list.photo.attached? %>
        <a href="<%= list_path(list) %>" class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
        <%= list.name %>
        </a>
      <% else %>
          <a href="<%= list_path(list) %>" class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url()">
          <%= list.name %>
          </a> <!-- Add this closing tag -->
      <% end %>
    <% end %>
</div>
